<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Discosaur.Views.AlbumView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Discosaur.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Margin="0,8">
        <TextBlock Text="{x:Bind Album.DisplayName}"
                   FontWeight="SemiBold"
                   FontSize="10"
                   Margin="0,0,0,4"
                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                   Tapped="AlbumNameTapped" />
        <ItemsControl x:Name="TracksControl" ItemsSource="{x:Bind Album.Tracks}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:Track">
                    <Border
                        Tapped="Track_Tapped"
                        DoubleTapped="Track_DoubleTapped"
                        Background="Transparent"
                        Padding="8,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Margin="0,0,12,0"
                                       Foreground="#999999"
                                       Text="{x:Bind TrackNumberDisplay}" />
                            <TextBlock Grid.Column="1"
                                       Text="{x:Bind Title}"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="2"
                                       Text="{x:Bind DurationDisplay}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
