<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Discosaur.Views.Player"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="16" Spacing="8">
        <TextBlock
            x:Name="TrackNameText"
            Text="No track playing"
            FontSize="16"
            HorizontalAlignment="Center" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
            <Button x:Name="PlayPauseButton" Click="PlayPause_Click" Width="48" Height="48">
                <FontIcon x:Name="PlayPauseIcon" Glyph="&#xE768;" />
            </Button>
            <Button Click="Stop_Click" Width="48" Height="48">
                <FontIcon Glyph="&#xE71A;" />
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
